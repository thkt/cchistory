{
  "name": "cchistory",
  "version": "1.0.0",
  "description": "CLI tool to browse and export Claude Code conversation history to Markdown",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "cchistory": "./dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "prebuild": "[ -d dist ] && mv dist ~/.Trash/ 2>/dev/null || true",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "npm run build && npm start",
    "clean": "[ -d dist ] && mv dist ~/.Trash/ || true",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "npm run build"
  },
  "keywords": [
    "claude",
    "history",
    "cli",
    "markdown"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.0",
    "dayjs": "^1.11.13",
    "fs-extra": "^11.3.1",
    "inquirer": "^12.9.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
